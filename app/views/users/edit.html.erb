<div class='account-page' id='account-page'>
  <div class="account-form">
    <div class='account-page__inner clearfix'>
      <div class='account-page__inner--left account-page__header'>
        <h2>Edit My Account</h2>
      </div>
    </div>

    <div class='account-page__inner--right user-form'>
      <%= form_with(model: @user, url: user_path, class: 'registration-main', local: true) do |f|%>
      <%= render 'shared/error_messages', model: @user %>
        <div class="post-image">
          <div id="image-list"></div>
          <%= f.file_field :image, placeholder: "Image Url", id: "image-form" %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :nickname%>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :self_introduction%>
          </div>
          <div class='field-input'>
            <%= f.text_area :self_introduction, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :country_id%>
          </div>
          <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class:'field-input'}) %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :gender_id%>
          </div>
          <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:'field-input'}) %>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :age%>
          </div>
          <div class='field-input'>
            <%= f.text_field :age, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>/Password must contain alpha-numeral(6 or more characters)/</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>